<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergio.playbetwincliente.Eventos">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="FÃºtbol"
            android:id="@+id/tbFutbol"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:drawableLeft="@drawable/imgfutbol"
            android:background="#baffba" />

        <Button
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:text="Baloncesto"
            android:id="@+id/btBaloncesto"
            android:layout_row="1"
            android:layout_column="0"
            android:drawableLeft="@drawable/imgbaloncesto"
            android:background="#ffd9ba" />

        <Button
            android:layout_width="189dp"
            android:layout_height="40dp"
            android:text="Tenis"
            android:id="@+id/btTenis"
            android:layout_row="1"
            android:layout_column="2"
            android:drawableLeft="@drawable/imgtenis"
            android:background="#FBFFBA" />

        <Button
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:text="e-Sports"
            android:id="@+id/btSport"
            android:layout_row="2"
            android:layout_column="0"
            android:drawableLeft="@drawable/imgesport"
            android:background="#ECBAFF" />

        <Button
            android:layout_width="189dp"
            android:layout_height="40dp"
            android:text="Otros"
            android:id="@+id/btOtros"
            android:layout_row="2"
            android:layout_column="2"
            android:drawableLeft="@drawable/imgotro"
            android:background="#BAFFFB" />


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="193dp"
            android:layout_above="@+id/buttonsLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:scrollbarStyle="outsideInset"
            android:layout_gravity="top|center_vertical|bottom"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="top|bottom">
            </LinearLayout>
        </ScrollView>

    </GridLayout>

</FrameLayout>
