<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergio.playbetwincliente.EventoFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EquipoCasa"
            android:id="@+id/EquipoCasa"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EquipoVIsitante"
            android:id="@+id/EquipoVIsitante"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="vs"
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="0"
            android:textAlignment="center"
            android:layout_columnSpan="3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textCoinsIn"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:inputType="number" />

        <Button
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:text="Apostar"
            android:id="@+id/btApostar"
            android:layout_row="6"
            android:layout_column="2"
            android:background="#0d3f53"
            android:textColor="#fff"
            android:onClick="apostar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/apusta1"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_gravity="left"
            android:background="#21a4d8"
            android:layout_columnSpan="3"
            android:layout_marginTop="10dp"
            android:onClick="marcarSelecionado" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/apuestaX"
            android:layout_row="8"
            android:layout_column="0"
            android:background="#21a4d8"
            android:layout_columnSpan="3"
            android:layout_marginTop="10dp"
            android:onClick="marcarSelecionado" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/apuesta2"
            android:layout_row="9"
            android:layout_column="0"
            android:background="#21a4d8"
            android:layout_columnSpan="3"
            android:layout_marginTop="10dp"
            android:onClick="marcarSelecionado" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Coins"
            android:id="@+id/textView5"
            android:layout_row="4"
            android:layout_column="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="No has apostado aun a este evento "
            android:id="@+id/textApostado"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_columnSpan="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="coins "
            android:id="@+id/coinsEvento"
            android:layout_row="3"
            android:layout_column="0" />

    </GridLayout>
</FrameLayout>
